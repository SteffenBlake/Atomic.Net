{
  "entities": [
    {
      "id": "goblin",
      "tags": ["poisoned"],
      "properties": {
        "health": 50,
        "poisonStacks": 3
      }
    }
  ],
  "rules": [
    {
      "from": "#poisoned",
      "where": {
        ">": [
          { "var": "properties.poisonStacks" },
          0
        ]
      },
      "do": {
        "mut": {
          "merge": [
            { "var": "" },
            {
              "properties": {
                "health": {
                  "-": [
                    { "var": "properties.health" },
                    1
                  ]
                }
              }
            }
          ]
        }
      }
    }
  ]
}
