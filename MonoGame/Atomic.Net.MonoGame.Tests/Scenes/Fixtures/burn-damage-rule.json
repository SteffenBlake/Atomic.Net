{
  "entities": [
    { "id": "goblin", "tags": ["burning"], "properties": { "health": 100, "burnDPS": 10 } }
  ],
  "rules": [{
    "from": "#burning",
    "where": {
      "filter": [
        { "var": "entities" },
        { ">": [{ "var": "properties.burnDPS" }, 0] }
      ]
    },
    "do": {
      "mut": [
        {
          "target": {"properties": "health"},
          "value": { "-": [{ "var": { "cat": ["entities.", { "var": "index" }, ".properties.health"] } }, { "*": [{ "var": { "cat": ["entities.", { "var": "index" }, ".properties.burnDPS"] } }, { "var": "world.deltaTime" }] }] }
        }
      ]
    }
  }]
}
