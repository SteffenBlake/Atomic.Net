{
  "entities": [
    {
      "id": "sprite",
      "tags": ["scalable"],
      "transform": {
        "scale": [1, 1, 1]
      }
    }
  ],
  "rules": [{
    "from": "#scalable",
    "where": { "var": "entities" },
    "do": {
      "mut": [
        {
          "target": { "transform": { "scale": true } },
          "value": { "x": 2, "y": 2, "z": 1 }
        }
      ]
    }
  }]
}
