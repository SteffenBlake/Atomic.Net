{
  "entities": [
    {
      "id": "sprite",
      "tags": [
        "scalable"
      ],
      "transform": {
        "scale": {
          "x": 1,
          "y": 1,
          "z": 1
        }
      }
    }
  ],
  "rules": [
    {
      "from": "#scalable",
      "where": {
        "var": "entities"
      },
      "do": {
        "mut": [
          {
            "target": {
              "transform": {
                "scale": true
              }
            },
            "value": {
              "x": 2,
              "y": 2,
              "z": 1
            }
          }
        ]
      }
    }
  ]
}
