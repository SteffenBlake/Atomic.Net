{
  "entities": [
    {
      "id": "sprite",
      "tags": [
        "scalable"
      ],
      "transform": {
        "scale": {
          "x": 1,
          "y": 1,
          "z": 1
        }
      }
    }
  ],
  "rules": [
    {
      "from": "#scalable",
      "where": {
        "var": "entities"
      },
      "do": {
        "mut": [
          {
            "target": {
              "scale": "x"
            },
            "value": 2
          },
          {
            "target": {
              "scale": "y"
            },
            "value": 2
          },
          {
            "target": {
              "scale": "z"
            },
            "value": 1
          }
        ]
      }
    }
  ]
}