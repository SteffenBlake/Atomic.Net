{
  "entities": [
    {
      "id": "goblin",
      "tags": ["burning"],
      "properties": {
        "health": 100.0,
        "burnDPS": 10.0
      }
    }
  ],
  "rules": [
    {
      "from": "#burning",
      "where": {
        "filter": [
          { "var": "entities" },
          {
            ">": [
              { "var": "properties.burnDPS" },
              0
            ]
          }
        ]
      },
      "do": {
        "mut": {
          "map": [
            { "var": "entities" },
            {
              "merge": [
                { "var": "" },
                {
                  "properties": {
                    "health": {
                      "-": [
                        { "var": "properties.health" },
                        {
                          "*": [
                            { "var": "properties.burnDPS" },
                            { "var": "world.deltaTime" }
                          ]
                        }
                      ]
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  ]
}
