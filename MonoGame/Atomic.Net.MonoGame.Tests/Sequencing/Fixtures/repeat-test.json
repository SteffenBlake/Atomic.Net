{
  "entities": [
    {
      "id": "testEntity",
      "properties": {
        "counter": 0
      }
    }
  ],
  "sequences": [
    {
      "id": "repeat-test",
      "steps": [
        {
          "repeat": {
            "every": 0.1,
            "until": { ">=": [{ "var": "elapsed" }, 0.5] },
            "do": {
              "mut": [
                {
                  "target": { "properties": "counter" },
                  "value": { "+": [
                    { "var": "self.properties.counter" },
                    1
                  ]}
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "rules": [
    {
      "from": "@testEntity",
      "where": {
        "filter": [
          { "var": "entities" },
          { "==": [1, 1] }
        ]
      },
      "do": {
        "sequence-start": "repeat-test"
      }
    }
  ]
}
